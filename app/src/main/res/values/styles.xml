<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Card.Margins" parent="CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/margin_small</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/margin_normal</item>
    </style>

    <style name="AllMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AllWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextBigBoldMatchWrap" parent="MatchParentWrapContent">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBoldMatchWrap" parent="MatchParentWrapContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DashboardText" parent="TextBoldMatchWrap">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SettingDashboardText" parent="AllWrapContent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="PhoneContactText" parent="AllWrapContent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PhoneNumberText" parent="AllWrapContent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="PhoneSmsAddress" parent="AllWrapContent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PhoneSmsDate" parent="AllWrapContent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PhoneSmsMessage" parent="AllWrapContent">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>




    <style name="DashboardImage" parent="AllMatchParent">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">20dip</item>
    </style>

    <style name="BtnStyle" parent="MatchParentWrapContent">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
